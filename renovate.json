{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": ["config:base"],

  "dependencyDashboard": false,

  "requiredStatusChecks": null,

  "major": {
    "enabled": false
  },

  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint",
      "automerge": true
    }
  ]
}
