    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "autoprefixer": "^10.4.14",
    "canvas-confetti": "^1.6.0",
    "gray-matter": "^4.0.3",
    "next": "^13.4.2",
    "next-sitemap": "^4.0.9",
    "nextra": "2.5.2",
    "nextra-theme-blog": "2.5.2",
    "postcss": "^8.4.23",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "rss": "^1.2.2",
    "sharp": "^0.32.1",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@next/env": "^13.4.2",
    "@next/eslint-plugin-next": "^13.4.2",
    "@types/node": "^20.2.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tailwindcss": "^3.12.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "typescript": "^5.0.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "lint-staged": {
    "*.+(js|mjs|cjs|jsx|ts|tsx)": [
      "eslint --cache --fix --cache-location './node_modules/@eslint/.eslintcache/'"
    ],
    "*.+(json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
