{
  "name": "aozaki-next-blog",
  "author": "Aozaki <i@aozaki.cc>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "prebuild": "node scripts/gen-rss.mjs",
    "postbuild": "next-sitemap --config ./scripts/next-sitemap.config.js",
    "prod": "pnpm prebuild && pnpm build && pnpm postbuild",
    "prepare": "husky install"
  },
  "dependencies": {
    "autoprefixer": "^10.4.15",
    "gray-matter": "^4.0.3",
    "next": "^13.4.18",
    "next-sitemap": "^4.2.2",
    "nextra": "2.11.0",
    "nextra-theme-blog": "2.11.0",
    "postcss": "^8.4.28",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "rss": "^1.2.2",
    "sharp": "^0.32.5",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@next/env": "^13.4.18",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "8.47.0",
    "eslint-config-next": "13.4.18",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,tsx}": [
      "eslint --cache --fix --cache-location './node_modules/@eslint/.eslintcache/'"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.6.12"
}
