{
  "name": "aozaki-next-blog",
  "author": "Aozaki <i@aozaki.cc>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "prebuild": "node scripts/gen-rss.mjs",
    "postbuild": "next-sitemap --config ./scripts/next-sitemap.config.js",
    "prod": "pnpm prebuild && pnpm build && pnpm postbuild",
    "prepare": "husky install"
  },
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "gray-matter": "^4.0.3",
    "next": "^13.4.6",
    "next-sitemap": "^4.1.3",
    "nextra": "2.7.1",
    "nextra-theme-blog": "2.7.1",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.9.0",
    "rss": "^1.2.2",
    "sharp": "^0.32.1",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@next/env": "^13.4.6",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.6",
    "eslint-plugin-tailwindcss": "^3.12.1",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,tsx}": [
      "eslint --cache --fix --cache-location './node_modules/@eslint/.eslintcache/'"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.6.2"
}
