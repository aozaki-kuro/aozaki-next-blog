{
  "name": "aozaki-next-blog",
  "author": "Aozaki <i@aozaki.cc>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "pre-build": "bun run scripts/gen-rss.mjs",
    "post-build": "next-sitemap --config ./scripts/next-sitemap.config.js",
    "prod": "bun run pre-build && bun run build && bun run post-build",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "next": "^14.2.8",
    "next-sitemap": "^4.2.3",
    "nextra": "2.13.4",
    "nextra-theme-blog": "2.13.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "rss": "^1.2.2",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.10.0",
    "@next/env": "^14.2.8",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/rss": "^0.0.32",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.10.0",
    "eslint-config-next": "15.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,tsx}": [
      "eslint --cache --fix --cache-location './node_modules/@eslint/.eslintcache/'"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
